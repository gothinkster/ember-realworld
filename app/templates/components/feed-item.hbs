<div class="article-preview">
  <div class="article-meta">
    <a href="profile.html"><img src= {{imageSrc}} alt="profile image for {{author}}"></a>
    <div class="info">
      <a href="" class="author">{{author}}</a>
      <span class="date">{{date}}</span>
    </div>
    <button {{action onFavorited}} class="btn btn-sm pull-xs-right {{if favorited 'btn-outline-primary' 'btn-outline-primary'}}">
      <i class="ion-heart"></i> {{favoritesCount}}
    </button>
  </div>
  <a href="" class="preview-link">
    {{content}}
  </a>
</div>
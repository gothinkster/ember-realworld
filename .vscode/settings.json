// Place your settings in this file to overwrite default and user settings.
{
  "prettier.printWidth": 120,
  "prettier.singleQuote": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/tmp": true,
    "**/assets": true,
    "**/dist": true
  },
  "editor.formatOnSave": true,
  "html.format.enable": true,
  "html.format.indentHandlebars": true,
  "beautify.language": {
    "css": ["css", "scss"],
    "html": ["htm", "html", "hbs"]
  },
  "html.format.maxPreserveNewLines": 0,
  "html.format.wrapLineLength": 120,
  "editor.detectIndentation": false,
  "path-intellisense.mappings": {
    "realworld-ember": "${workspaceRoot}/app"
  },
  "stylelint.enable": true,
  "css.validate": false,
  "scss.validate": false,
  "stylefmt.useStylelintConfigOverrides": true,
  "html.format.unformatted": "a, abbr, acronym, b, bdo, big, br, cite, code, dfn, em, i, img, input, kbd, map, object, q, samp, select, small, strong, sub, sup, textarea, tt, var",
  "editor.tabSize": 2,
  "cSpell.words": [
    "alon",
    "bukai",
    "ember",
    "froscia",
    "fullstack",
    "htmlbars",
    "la",
    "precompile",
    "qunit",
    "realworld"
  ],
  "javascript.format.insertSpaceBeforeFunctionParenthesis": false,
  "editor.formatOnSave": false
}
